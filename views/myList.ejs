<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Meal List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <%- include('./partials/header.ejs') %>

    <a href="/">Logout </a>

    <a href="/home">Back to home</a>

    <div id="container">
            <div id="search">
                <label for="searchInput">Find <i class="fa fa-search"></i>Friends</label>
                <input id="searchInput" type="text" placeholder="Search">
            </div>

    <button><a href="/mylist/add">Add Restaurant</a></button>

    <% for(let i = 0; i < meals.length; i++){ %>
      <div class="card bg-light mb-3" style="width: 40rem;">
        <div class="card-body">
        <!-- close (x) button in the corner I may add it back later -->
          <!-- <button type="button" class="close">&times;</button> -->
        <ul id="results">
          <li class="card-title"><%=meals[i].restaurantName%></li>
          <li class="card-text"><%=meals[i].location%></li>
          <li class="card-text">Rating: <%=meals[i].rating%></li>
        </ul>
          <button><a href="/mylist/<%=meals[i]._id%>">View</a></button>
          <button><a href="/mylist/<%=meals[i]._id%>/edit">Edit/Delete</a></button>
        </div>
      </div>
  <% } %>

    <%- include('./partials/footer.ejs') %>

    <script src="./views/javascript/index.js"></script>
  </body>
</html>
